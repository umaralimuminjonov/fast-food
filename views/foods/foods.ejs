<%- include("../header") %> <%- include("../sidebar") %>
<!--Container Main start-->
<main class="main">
  <section class="foods section" id="foods">
    <h1 class="mt-4 mb-4">Foods</h1>
    <a data-ripplet href="/foods/new" class="btn btn-primary mb-4">Create</a>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th style="width: 3rem" scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Product Id</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Sold</th>
          <th style="width: 2rem" scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% foods.forEach((food, index) => { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= food.title %></td>
          <td><%= food.product_id %></td>
          <td><%= food.price %></td>
          <td><%= food.category.name %></td>
          <td><%= food.sold %></td>
          <td>
            <div class="dropdown">
              <a
                class="dropdown-toggle"
                data-ripplet
                data-bs-toggle="dropdown"
                href="#"
                role="button"
                aria-haspopup="true"
                aria-expanded="false"
              >
                <i class="uil uil-ellipsis-h icon"></i>
              </a>
              <div class="dropdown-menu">
                <a
                  data-ripplet
                  class="dropdown-item"
                  href="/foods/<%= food._id %>/show"
                  >Show
                </a>
                <a
                  data-ripplet
                  class="dropdown-item"
                  href="/foods/<%= food._id %>/update"
                  >Update
                </a>
                <a
                  data-ripplet
                  class="dropdown-item"
                  href="/foods/<%= food._id %>/delete"
                  >Delete
                </a>
              </div>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </section>
</main>
